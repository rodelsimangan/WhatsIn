@using Abp.Authorization.Users
@using Abp.Web.Mvc.Extensions
@using WhatsIn.Web.Navigation
@using WhatsIn.Application.Dto
@model List<CategoryDto>
@{
    ViewBag.ActiveMenu = "Categories"; //The menu item will be active for this page.
    ViewBag.CurrentPageName = PageNames.App.Administration.Categories;
}
@section Styles
{
    @Html.IncludeStyle("~/css/Grid.css")
}
@section scripts
{
    @Html.IncludeScript("~/Views/Categories/_UpsertCategoryModal.js")
    @Html.IncludeScript("~/Views/Categories/Index.js")
}

<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("Categories")</span>
                </h1>
            </div>
        </div>
    </div>
   
    <div class="row">
        <div class="col-md-12">
            <div class="col-xs-12 text-right">
                <button id="CreateNewCategoryButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewCategory")</button>
            </div>            
            <div class="grid-container">
                <div class="rTable">
                    <div class="rTableRow">
                        <div class="rTableHead" style="width:40%;">@L("Name")</div>
                        <div class="rTableHead" style="width:40%;">@L("Description")</div>
                        <div class="rTableHead">&nbsp;</div>
                        <div class="rTableHead">&nbsp;</div>
                    </div>
                </div>
                
                    @foreach (var item in Model)
                    {  
                        <div id="@item.Id" class="rTable grid-parent" expandgrid="0">
                            <div id="@item.Id" class="rTableRow" expandgrid="0">
                                <div class="rTableCell text-left" style="width:40%;">@item.Name</div>
                                <div class="rTableCell text-left" style="width:40%;">@item.Description</div>
                                <div class="rTableCell"><input type="hidden" class="userId" /></div>
                                <div class="rTableCell text-right">
                                    <button data-toggle="modal" id="@item.Id" class="btn btn-circle btn-xs red UpdateCategoryButton"><span class="fa fa-edit"></span></button>
                                    <button id="@item.Id" class="btn btn-circle btn-xs red DeleteCategoryButton"><span class="fa fa-trash"></span></button>
                                </div>
                            </div>
                        </div>
                    }
            </div>
    </div>
</div>
    
    </div>
