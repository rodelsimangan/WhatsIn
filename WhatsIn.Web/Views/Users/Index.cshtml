@using Abp.Authorization.Users
@using Abp.Web.Mvc.Extensions
@using WhatsIn.Web.Navigation
@model Abp.Application.Services.Dto.ListResultDto<WhatsIn.Users.Dto.UserListDto>
@{
    ViewBag.ActiveMenu = "Users"; //The menu item will be active for this page.
    ViewBag.CurrentPageName = PageNames.App.Administration.Users;
}
@section scripts
{
    @Html.IncludeScript("~/Views/Users/_UpsertUserModal.js")
    @Html.IncludeScript("~/Views/Users/Index.js")
}

<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("Users")</span>
                </h1>
            </div>
        </div>
    </div>
   
    <div class="row">
        <div class="col-md-12">
            <div class="col-xs-12 text-right">
                <button id="CreateNewUserButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewUser")</button>
            </div>            
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        <th>@L("UserName")</th>
                        <th>@L("FullName")</th>
                        <th>@L("EmailAddress")</th>
                        <th>@L("IsActive")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Items)
                    {
                        <tr>
                            <td>
                                <button data-toggle="modal" id="@user.Id" class="btn btn-circle btn-xs red UpdateUserButton"><span class="fa fa-edit"></span></button>
                                <button id="@user.Id" class="btn btn-circle btn-xs red DeleteUserButton"><span class="fa fa-trash"></span></button>
                            </td>                            
                            <td><input type="hidden" class="userId" /></td>
                            <td>@user.UserName</td>
                            <td>@user.FullName</td>
                            <td>@user.EmailAddress</td>
                            <td>@L(user.IsActive ? "Yes" : "No")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
