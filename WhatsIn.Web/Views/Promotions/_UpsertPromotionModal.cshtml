@using WhatsIn.Users
@using WhatsIn.Web.Models.Common.Modals

@Html.Partial("~/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewPromotion")))

@model  WhatsIn.Web.Models.PromotionViewModel

<div class="modal-body">
    <form role="form" novalidate class="form-validation">
        <!--h3>Basic Information</!--h3-->
        @if (Model.IsEditMode)
        {
                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" name="DateCreated" value="@Model.DateCreated" />
                <input type="hidden" name="CreatedBy" value="@Model.CreatedBy" />
        }
        <!--div class="form-group form-md-line-input form-md-floating-label no-hint">
            <img id="imgPromotion" alt="No Image" style="height:100px; width:100px;" />
        </div-->
        <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <img id="imgPreview" alt="No Image" height="200" width="200" src="@Url.Content(string.Concat("/Uploads/Promotions/",Model.PromotionPath))" /><br />
            <input type="file" id="UploadImg" /> <br /><br />
            <input type="hidden" id="txtImg" name="PromotionPath" value="@Model.PromotionPath" size="50" />

        </div>
    </form>
</div>

@Html.Partial("~/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
