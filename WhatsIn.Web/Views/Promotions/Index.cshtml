@using Abp.Authorization.Users
@using Abp.Web.Mvc.Extensions
@using WhatsIn.Web.Navigation
@using WhatsIn.Application.Dto
@model List<PromotionDto>
@{
    ViewBag.ActiveMenu = "Promotions"; //The menu item will be active for this page.
    ViewBag.CurrentPageName = PageNames.App.Store.Promotions;
}
@section Styles
{
    @Html.IncludeStyle("~/css/Grid.css")
}
@section scripts
{
    @Html.IncludeScript("~/Views/Promotions/_UpsertPromotionModal.js")
    @Html.IncludeScript("~/Views/Promotions/Index.js")
}

<div class="row margin-bottom-5 admin-content">
    <div class="col-xs-12">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("Promotions")</span>
                </h1>
            </div>
        </div>
    </div>
   
    <div class="row">
        <div class="col-md-12">
            <div class="col-xs-12 text-right">
                <button id="CreateNewPromotionButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewPromotion")</button>
            </div>      
            <div class="col-xs-12" >
                <div class="row">&nbsp;</div>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var ctr = i % 3;

                    if (ctr == 0)
                    {
                        @:<div class="row">
                    }
                    var item = Model[i];
                    <div class="col-xs-4">
                        <img class="img-thumbnail" id="imgPromotions" alt="No Image" src="@Url.Content(string.Concat("/Uploads/Promotions/",@item.PromotionPath))">
                        <button data-toggle="modal" id="@item.Id" class="btn btn-circle btn-xs red UpdatePromotionButton"><span class="fa fa-edit"></span></button>
                        <button id="@item.Id" class="btn btn-circle btn-xs red DeletePromotionButton"><span class="fa fa-trash"></span></button>
                    </div>
                    if ((ctr == Model.Count - 1) || (ctr == 2))
                    {
                        @:</div><div class="row">&nbsp;</div>
                    }
                }
            </div>

