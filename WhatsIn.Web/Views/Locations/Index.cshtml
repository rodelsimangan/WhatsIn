@using Abp.Authorization.Users
@using Abp.Web.Mvc.Extensions
@using WhatsIn.Web.Navigation
@using WhatsIn.Application.Dto
@model List<ProvinceDto>
@{
    ViewBag.ActiveMenu = "Province"; //The menu item will be active for this page.
    ViewBag.CurrentPageName = PageNames.App.Administration.Locations;
}
@section Styles
{
    <style type="text/css">
        .rTable {
            display: table;
            width: 100%;
        }

        .rTableRow {
            display: table-row;
        }

        .rTableHeading {
            display: table-header-group;
            background-color: #ddd;
        }

        .rTableCell {
            display: table-cell;
            padding: 3px 10px 15px;
            border-bottom: 1px solid #999999;
        }

        .rTableHead {
            display: table-cell;
            padding: 10px 10px 10px;
            border-bottom: 1px solid #999999;
            font-weight: bold;
        }

        .rTableHeading {
            display: table-header-group;
            background-color: #ddd;
            font-weight: bold;
        }

        .rTableFoot {
            display: table-footer-group;
            font-weight: bold;
            background-color: #ddd;
        }

        .rTableBody {
            display: table-row-group;
        }

        .grid-container .grid-collapse-expand {
            /* background-color:#d3d3d3;
            padding: 2px;
            font-weight: bold;
           */
            cursor: pointer;
        }

        .grid-container .grid-child {
            display: none;
            padding: 5px;
        }
    </style>
}
@section scripts
{
    @Html.IncludeScript("~/Views/Locations/_UpsertProvinceModal.js")
    @Html.IncludeScript("~/Views/Locations/_UpsertLocationModal.js")
    @Html.IncludeScript("~/Views/Locations/Index.js")
}

<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("Locations")</span>
                </h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-xs-12 text-right">
                <button id="CreateNewProvinceButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewProvince")</button>
            </div>
            <div class="rTable grid-container">
                <div class="col-md-12">
                    <div class="rTableRow">
                        <div class="rTableHead">&nbsp;</div>
                        <div class="rTableHead">@L("Name")</div>
                        <div class="rTableHead">@L("Description")</div>
                        <div class="rTableHead">&nbsp;</div>
                        <div class="rTableHead">&nbsp;</div>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div id="@item.Id" class="rTableRow grid-parent" expandgrid="0">
                        <div class="col-md-12">
                            <div class="rTableCell grid-collapse-expand">
                                <button class="btn btn-circle btn-xs red ExpandCollapseButton-@item.Id"><span class="fa fa-chevron-right"></span></button>
                            </div>
                            <div class="rTableCell">@item.Name</div>
                            <div class="rTableCell">@item.Description</div>
                            <div class="rTableCell"><input type="hidden" class="userId" /></div>
                            <div class="rTableCell">
                                <button data-toggle="modal" id="@item.Id" class="btn btn-circle btn-xs red UpdateProvinceButton"><span class="fa fa-edit"></span></button>
                                <button id="@item.Id" class="btn btn-circle btn-xs red DeleteProvinceButton-@item.Id"><span class="fa fa-trash"></span></button>
                            </div>
                        </div>
                    </div>
                    <div id="@item.Id" class="rTableRow grid-child">
                        <div class="rTableCell">
                            <div class="col-md-12" id="DIV-LOCATIONS">
                                @*Html.Action("GetLocations", item.Id);*@
                            </div> 
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
