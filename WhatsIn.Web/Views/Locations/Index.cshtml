@using Abp.Authorization.Users
@using Abp.Web.Mvc.Extensions
@using WhatsIn.Web.Navigation
@using WhatsIn.Application.Dto
@model List<ProvinceDto>
@{
    ViewBag.ActiveMenu = "Locations"; //The menu item will be active for this page.
    ViewBag.CurrentPageName = PageNames.App.Administration.Locations;
}
@section Styles
{
  @Html.IncludeStyle("~/css/Grid.css")
}
@section scripts
{
    @Html.IncludeScript("~/Views/Locations/_UpsertProvinceModal.js")
    @Html.IncludeScript("~/Views/Locations/_UpsertLocationModal.js")
    @Html.IncludeScript("~/Views/Locations/Index.js")
}

<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("Locations")</span>
                </h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-xs-12 text-right">
                <button id="CreateNewProvinceButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewProvince")</button>
            </div>

            <div class="grid-container">
                <div class="rTable">
                    <div class="rTableRow">
                        <div class="rTableHead" style="width:10%;"></div>
                        <div class="rTableHead" style="width:40%;">@L("Name")</div>
                        <div class="rTableHead" style="width:40%;">@L("Description")</div>
                        <div class="rTableHead">&nbsp;</div>
                        <div class="rTableHead">&nbsp;</div>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div id="@item.Id" class="rTable grid-parent" expandgrid="0">
                        <div id="@item.Id" class="rTableRow" expandgrid="0">
                            <div class="rTableCell grid-collapse-expand text-left" style="width:10%;">
                                <button class="btn btn-circle btn-xs red ExpandCollapseButton-@item.Id"><span class="fa fa-chevron-right"></span></button>
                            </div>
                            <div class="rTableCell text-left" style="width:40%;">@item.Name</div>
                            <div class="rTableCell text-left" style="width:40%;">@item.Description</div>
                            <div class="rTableCell"><input type="hidden" class="userId" /></div>
                            <div class="rTableCell text-right">
                                <button data-toggle="modal" id="@item.Id" class="btn btn-circle btn-xs red UpdateProvinceButton"><span class="fa fa-edit"></span></button>
                                <button id="@item.Id" class="btn btn-circle btn-xs red DeleteProvinceButton-@item.Id"><span class="fa fa-trash"></span></button>
                            </div>
                        </div>
                    </div>
                    <div class="rTable grid-child">
                        <div id="@item.Id" class="text-right" style="width:90%">
                            <div id="DIV-LOCATIONS">
                                @*Html.Action("GetLocations", item.Id);*@
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
