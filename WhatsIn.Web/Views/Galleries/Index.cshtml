        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("Galleries")</span>
                </h1>
            </div>
        </div>
    </div>
   
    <div class="row">
        <div class="col-md-12">
            <div class="col-xs-12 text-right">
